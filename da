import { useState, useEffect } from "react";
import { MapPin, Phone, Mail, Clock, Send, Info } from "lucide-react";
import { useForm } from "react-hook-form";
import { zodResolver } from "@hookform/resolvers/zod";
import { useMutation, useQueryClient } from "@tanstack/react-query";
import { insertAppointmentSchema, type InsertAppointment } from "@shared/schema";
import { apiRequest } from "@/lib/queryClient";
import { useToast } from "@/hooks/use-toast";
import { Button } from "@/components/ui/button";
import { Input } from "@/components/ui/input";
import { Label } from "@/components/ui/label";
import { Textarea } from "@/components/ui/textarea";
import { Select, SelectContent, SelectItem, SelectTrigger, SelectValue } from "@/components/ui/select";
import { Checkbox } from "@/components/ui/checkbox";

export default function Contact() {
  const { toast } = useToast();
  const queryClient = useQueryClient();
  
  const form = useForm<InsertAppointment>({
    resolver: zodResolver(insertAppointmentSchema),
    defaultValues: {
      nama: "",
      telepon: "",
      email: "",
      tanggal: "",
      dokter: "",
      keluhan: ""
    }
  });

  const appointmentMutation = useMutation({
    mutationFn: async (data: InsertAppointment) => {
      const response = await apiRequest("POST", "/api/appointments", data);
      return response.json();
    },
    onSuccess: () => {
      toast({
        title: "Berhasil!",
        description: "Permintaan janji Anda telah diterima. Tim kami akan segera menghubungi Anda untuk konfirmasi.",
      });
      form.reset();
      queryClient.invalidateQueries({ queryKey: ["/api/appointments"] });
    },
    onError: (error: any) => {
      toast({
        title: "Gagal",
        description: error.message || "Terjadi kesalahan saat mengirim permintaan.",
        variant: "destructive",
      });
    }
  });

  const onSubmit = (data: InsertAppointment) => {
    appointmentMutation.mutate(data);
  };

  // Set minimum date to tomorrow
  useEffect(() => {
    const tomorrow = new Date();
    tomorrow.setDate(tomorrow.getDate() + 1);
    const minDate = tomorrow.toISOString().split('T')[0];
    
    const dateInput = document.getElementById('tanggal') as HTMLInputElement;
    if (dateInput) {
      dateInput.min = minDate;
    }
  }, []);

  return (
    <section id="kontak" className="py-20 bg-white">
      <div className="container mx-auto px-4">
        <div className="grid lg:grid-cols-2 gap-16 items-start">
          <div>
            <h2 className="text-3xl lg:text-4xl font-bold text-gray-900 mb-6">Hubungi Kami</h2>
            <p className="text-xl text-secondary mb-8">
              Kami siap membantu kebutuhan kesehatan Anda. Hubungi kami melalui berbagai cara di bawah ini.
            </p>

            <div className="space-y-6">
              <div className="flex items-start space-x-4">
                <div className="w-12 h-12 bg-primary-light rounded-full flex items-center justify-center flex-shrink-0">
                  <MapPin className="text-primary h-6 w-6" />
                </div>
                <div>
                  <h3 className="font-semibold mb-2">Alamat Lengkap</h3>
                  <p className="text-secondary">
                    Jl. Batu Horpak No. 123<br />
                    Kecamatan Batu Horpak<br />
                    Kota Medan, Sumatera Utara 20XX1
                  </p>
                </div>
              </div>

              <div className="flex items-start space-x-4">
                <div className="w-12 h-12 bg-primary-light rounded-full flex items-center justify-center flex-shrink-0">
                  <Phone className="text-primary h-6 w-6" />
                </div>
                <div>
                  <h3 className="font-semibold mb-2">Telepon</h3>
                  <p className="text-secondary">
                    Utama: (061) 123-4567<br />
                    WhatsApp: +62 812-3456-789<br />
                    Darurat: 119
                  </p>
                </div>
              </div>

              <div className="flex items-start space-x-4">
                <div className="w-12 h-12 bg-primary-light rounded-full flex items-center justify-center flex-shrink-0">
                  <Mail className="text-primary h-6 w-6" />
                </div>
                <div>
                  <h3 className="font-semibold mb-2">Email</h3>
                  <p className="text-secondary">
                    info@puskesmasbaturpak.id<br />
                    admin@puskesmasbaturpak.id
                  </p>
                </div>
              </div>

              <div className="flex items-start space-x-4">
                <div className="w-12 h-12 bg-primary-light rounded-full flex items-center justify-center flex-shrink-0">
                  <Clock className="text-primary h-6 w-6" />
                </div>
                <div>
                  <h3 className="font-semibold mb-2">Jam Buka</h3>
                  <p className="text-secondary">
                    Senin - Jumat: 08:00 - 16:00<br />
                    Sabtu: 08:00 - 12:00<br />
                    Minggu: Tutup (kecuali darurat)
                  </p>
                </div>
              </div>
            </div>

            {/* Interactive Map Placeholder */}
            <div className="mt-8 bg-gray-200 h-64 rounded-xl flex items-center justify-center">
              <div className="text-center">
                <MapPin className="mx-auto text-6xl text-gray-400 mb-4 h-16 w-16" />
                <p className="text-gray-500">Peta Lokasi Puskesmas</p>
                <p className="text-sm text-gray-400">Klik untuk membuka di Google Maps</p>
              </div>
            </div>
          </div>

          {/* Appointment Form */}
          <div id="janji" className="bg-primary-light rounded-2xl p-8">
            <h3 className="text-2xl font-bold text-gray-900 mb-6">Buat Janji Temu</h3>
            <p className="text-secondary mb-6">
              Isi formulir di bawah ini untuk membuat janji konsultasi dengan dokter kami.
            </p>

            <form onSubmit={form.handleSubmit(onSubmit)} className="space-y-6">
              <div className="grid md:grid-cols-2 gap-4">
                <div>
                  <Label htmlFor="nama">Nama Lengkap *</Label>
                  <Input
                    id="nama"
                    {...form.register("nama")}
                    placeholder="Masukkan nama lengkap"
                    className="mt-1"
                  />
                  {form.formState.errors.nama && (
                    <p className="text-sm text-red-600 mt-1">{form.formState.errors.nama.message}</p>
                  )}
                </div>
                <div>
                  <Label htmlFor="telepon">Nomor Telepon *</Label>
                  <Input
                    id="telepon"
                    type="tel"
                    {...form.register("telepon")}
                    placeholder="08xx-xxxx-xxxx"
                    className="mt-1"
                  />
                  {form.formState.errors.telepon && (
                    <p className="text-sm text-red-600 mt-1">{form.formState.errors.telepon.message}</p>
                  )}
                </div>
              </div>

              <div>
                <Label htmlFor="email">Email</Label>
                <Input
                  id="email"
                  type="email"
                  {...form.register("email")}
                  placeholder="nama@email.com"
                  className="mt-1"
                />
                {form.formState.errors.email && (
                  <p className="text-sm text-red-600 mt-1">{form.formState.errors.email.message}</p>
                )}
              </div>

              <div className="grid md:grid-cols-2 gap-4">
                <div>
                  <Label htmlFor="tanggal">Tanggal Konsultasi *</Label>
                  <Input
                    id="tanggal"
                    type="date"
                    {...form.register("tanggal")}
                    className="mt-1"
                  />
                  {form.formState.errors.tanggal && (
                    <p className="text-sm text-red-600 mt-1">{form.formState.errors.tanggal.message}</p>
                  )}
                </div>
                <div>
                  <Label htmlFor="dokter">Pilih Dokter *</Label>
                  <Select onValueChange={(value) => form.setValue("dokter", value)}>
                    <SelectTrigger className="mt-1">
                      <SelectValue placeholder="Pilih Dokter" />
                    </SelectTrigger>
                    <SelectContent>
                      <SelectItem value="dr-sarah">Dr. Sarah Windari, Sp.PD</SelectItem>
                      <SelectItem value="dr-ahmad">Dr. Ahmad Rizal, Sp.A</SelectItem>
                      <SelectItem value="dr-maya">Dr. Maya Sari, Sp.OG</SelectItem>
                      <SelectItem value="dr-budi">Dr. Budi Santoso</SelectItem>
                    </SelectContent>
                  </Select>
                  {form.formState.errors.dokter && (
                    <p className="text-sm text-red-600 mt-1">{form.formState.errors.dokter.message}</p>
                  )}
                </div>
              </div>

              <div>
                <Label htmlFor="keluhan">Keluhan/Keperluan *</Label>
                <Textarea
                  id="keluhan"
                  {...form.register("keluhan")}
                  rows={4}
                  placeholder="Jelaskan keluhan atau keperluan konsultasi Anda"
                  className="mt-1"
                />
                {form.formState.errors.keluhan && (
                  <p className="text-sm text-red-600 mt-1">{form.formState.errors.keluhan.message}</p>
                )}
              </div>

              <div className="flex items-start space-x-3">
                <Checkbox id="setuju" required />
                <Label htmlFor="setuju" className="text-sm text-gray-600">
                  Saya setuju dengan kebijakan privasi dan memberikan persetujuan untuk dihubungi oleh tim Puskesmas Batu Horpak.
                </Label>
              </div>

              <Button 
                type="submit" 
                className="w-full"
                disabled={appointmentMutation.isPending}
              >
                <Send className="mr-2 h-4 w-4" />
                {appointmentMutation.isPending ? "Mengirim..." : "Kirim Permintaan Janji"}
              </Button>
            </form>

            <div className="mt-6 p-4 bg-blue-50 rounded-lg">
              <div className="flex items-start space-x-3">
                <Info className="text-primary mt-1 h-5 w-5" />
                <div className="text-sm text-gray-600">
                  <p className="font-medium mb-1">Informasi Penting:</p>
                  <ul className="space-y-1">
                    <li>• Konfirmasi akan dikirim dalam 24 jam</li>
                    <li>• Untuk darurat, langsung hubungi 119</li>
                    <li>• Bawa kartu identitas saat konsultasi</li>
                  </ul>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>
  );
}
